<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <aeroshipping_tab translate="label" module="fw_aeroshipping">
            <label>Aero Shipping Status</label>
            <sort_order>350</sort_order>
        </aeroshipping_tab>
    </tabs>
    <sections>
        <aeroshipping translate="label" module="fw_aeroshipping">
            <label>Aero Shipping Status Processing</label>
            <tab>aeroshipping_tab</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Aero Shipping Settings</label>
                    <comment>Settings for Aero Shipping Status processing</comment>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active>
                            <label>Enable</label>
                            <comment>Toggles the job of downloading the XML files from Aeroship</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>

                        <ftp_host translate="label tooltip comment">
                            <label>FTP Host</label>
                            <comment>FTP Host</comment>
                            <tooltip>FTP Host</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ftp_host>
                        <ftp_user translate="label tooltip comment">
                            <label>FTP User</label>
                            <comment>FTP User</comment>
                            <tooltip>FTP User</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ftp_user>
                        <ftp_password translate="label tooltip comment">
                            <label>FTP Password</label>
                            <comment>FTP Password</comment>
                            <tooltip>FTP Password</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ftp_password>
                        <ftp_folder translate="label tooltip comment">
                            <label>FTP Remote Folder</label>
                            <comment>FTP Remote Folder</comment>
                            <tooltip>FTP Remote Folder</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ftp_folder>
                        <emailnotice translate="label tooltip comment">
                            <label>Email address(es) to notify in case of processing errors. (comma sparated)</label>
                            <comment>Please enter Email address(es) to notify in case of processing errors.</comment>
                            <tooltip>Please enter Email address(es) to notify in case of processing errors.</tooltip>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </emailnotice>
                    </fields>
                </settings>
            </groups>
        </aeroshipping>
    </sections>
</config>